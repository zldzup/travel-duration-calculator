let currentFilter = 'all';

const state = {
    step: 'idle',
    mode: 'auth',
    input: '',
    amount: 0,
    preauthAmount: 0,
    authCode: '',
    rrn: '',
    selectedReceipt: null,
    errorSim: null,
    currentCard: null,
    currentCardCvv: null
