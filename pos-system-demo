    { id: 4, type: 'complete', typeName: 'é¢„æˆæƒå®Œæˆ', card: '6222 88** **** 8888', amount: 1200, auth: '345678', rrn: '202401160001', date: '01-16 09:15', status: 'normal', voided: false, refunded: false },
    { id: 5, type: 'auth', typeName: 'é¢„æˆæƒ', card: '4111 22** **** 4444', amount: 3000, auth: '111222', rrn: '202401140001', date: '01-14 09:00', status: 'normal', voided: true, refunded: false }
